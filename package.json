    "@types/node": "^14.10.0",
    "@types/sinon": "^9.0.8",
    "@types/sinon-chai": "^3.2.5",
    "@types/url-parse": "^1.4.3",
    "@types/ws": "^7.2.6",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.14.0",
    "eslint-config-standard-kit": "0.15.1",
