{
  "name": "edge-currency-plugins",
  "version": "0.1.0",
  "private": true,
  "description": "Edge currency plugins to fetch and process wallet accounts, balances and transactions.",
  "repository": "https://github.app/EdgeApp/edge-currency-plugins",
  "license": "MIT",
  "author": "Airbitz, Inc.",
  "main": "lib/index.js",
  "scripts": {
    "build.lib": "sucrase -q -t typescript,imports -d ./lib ./src",
    "build.types": "tsc",
    "clean": "rimraf lib",
    "fix": "npm run lint -- --fix",
    "prepare": "npm-run-all clean -p build.*",
    "start": "node -r sucrase/register src/index.ts",
    "test": "mocha -r sucrase/register 'test/**/*-test.ts'",
    "lint": "eslint --ext .js,.ts ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "devDependencies": {
    "@types/chai": "^4.2.9",
    "@types/mocha": "^7.0.1",
    "@types/node": "^14.10.0",
    "@types/sinon": "^9.0.8",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^2.0.0",
    "chai": "^4.2.0",
    "eslint": "^7.4.0",
    "eslint-config-standard-kit": ">=0.14.4",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": ">=9.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": ">=4.2.1",
    "eslint-plugin-simple-import-sort": ">=4.0.0",
    "eslint-plugin-standard": ">=4.0.0",
    "husky": ">=3.0.0",
    "lint-staged": "^10.2.11",
    "mocha": "^8.1.3",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.4",
    "prettier": "^2.0.5",
    "sinon": "^9.1.0",
    "sinon-chai": "^3.5.0",
    "sucrase": "^3.12.1",
    "ts-mocha": "^7.0.0",
    "ts-node": "^9.0.0",
    "ts-sinon": "^2.0.1",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "altcoin-js": "EdgeApp/altcoin-js#master",
    "bip32": "^2.0.5",
    "bip32grs": "^2.0.5",
    "bip39": "^3.0.2",
    "blake-hash": "^2.0.0",
    "bn.js": "^5.1.2",
    "bs58grscheck": "^2.1.2",
    "bs58smartcheck": "^2.0.4",
    "wif-smart": "^2.0.0",
    "wifgrs": "^2.0.6"
  }
}
