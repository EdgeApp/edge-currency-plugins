    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^6.0.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.3",
    "mocha": "^8.1.3",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.4",
    "prettier": "^2.2.0",
    "sinon": "^9.1.0",
    "sinon-chai": "^3.5.0",
    "sucrase": "^3.12.1",
    "ts-mocha": "^7.0.0",
    "ts-node": "^9.0.0",
    "ts-sinon": "^2.0.1",
    "typescript": "^4.1.2"
